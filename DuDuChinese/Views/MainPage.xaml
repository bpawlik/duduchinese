<Page x:Class="DuDuChinese.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:DuDuChinese.Views"
      xmlns:c="using:DuDuChinese.Converters"
      xmlns:core="using:Template10.Services.PopupService"
      xmlns:behaviors="using:Template10.Behaviors"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:DuDuChinese.ViewModels" mc:Ignorable="d">

    <Page.Resources>
        <c:BooleanDoubleConverter x:Key="SmallFontSize" True="24" />
        <c:BooleanDoubleConverter x:Key="ChineseFontSize" True="36"/>
        <c:NotepadLookupConvertor x:Key="NotepadLookup"/>
        <c:MinimumLengthConverter x:Key="MinLengthChecker"/>
        <c:VisibilityConverter x:Key="VisibilityConverter" True="Visible" False="Collapsed"/>
        <c:VisibilityConverter x:Key="InvertedVisibility" True="Collapsed" False="Visible"/>
        <c:InvertedBooleanConverter x:Key="InvertedBoolean"/>
        <c:BooleanColorConverter x:Key="ListItemColor" True="Gray" />
    </Page.Resources>

    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <Setter Target="stateTextBox.Text" Value="Narrow Visual State" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <Setter Target="stateTextBox.Text" Value="Normal Visual State" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                        <Setter Target="stateTextBox.Text" Value="Wide Visual State" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <controls:PageHeader x:Name="pageHeader" RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True" Text="Main Page">

            <!-- primary commands -->
            <controls:PageHeader.PrimaryCommands>
                <AppBarButton Click="AppBarAddButton_Click" Label="Add">
                    <SymbolIcon Symbol="Add" Height="20" VerticalAlignment="Top" />
                </AppBarButton>
            </controls:PageHeader.PrimaryCommands>

            <!--  secondary commands  -->
            <controls:PageHeader.SecondaryCommands>
                <AppBarButton Click="{x:Bind ViewModel.GotoSettings}" Label="Settings" />
                <AppBarButton Click="{x:Bind ViewModel.GotoPrivacy}" Label="Privacy" />
                <AppBarButton Click="{x:Bind ViewModel.GotoAbout}" Label="About" />
            </controls:PageHeader.SecondaryCommands>

        </controls:PageHeader>

        <Pivot x:Name="pivot" Title=" " Padding="0,-53,0,0" Margin="0,53,0,0" SelectionChanged="pivot_SelectionChanged">
            <PivotItem x:Name="SearchPane" Header="Search">
                <!-- Search pivot content goes here-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <TextBox x:Name="Query" InputScope="Search" GotFocus="Query_GotFocus" LostFocus="Query_LostFocus" KeyDown="Query_KeyDown" Text="english, pin1yin1 or 中文"/>
                        <TextBlock x:Name="Status" Text="" TextWrapping="Wrap" Visibility="Collapsed" />
                        <ProgressBar x:Name="Progress" Visibility="Collapsed" />
                    </StackPanel>
                    <ListBox x:Name="Results" ItemsSource="{Binding Items}" Grid.Row="1" VirtualizingStackPanel.VirtualizationMode="Standard" SelectionChanged="ListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <StackPanel x:Name="DefaultView" Margin="0,0,0,12">
                                        <TextBlock Text="{Binding Pinyin}" Loaded="Pinyin_Loaded" TextWrapping="NoWrap" TextTrimming="WordEllipsis" />
                                        <TextBlock Text="{Binding English}" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="12,-4,0,5" />
                                        <TextBlock Text="{Binding Chinese}" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="12,-6,0,0" />
                                    </StackPanel>
                                    <StackPanel x:Name="ExpandedView" Margin="0,0,0,12" Visibility="Collapsed">
                                        <TextBlock Text="{Binding Pinyin}" Loaded="Pinyin_Loaded" TextWrapping="Wrap" TextTrimming="WordEllipsis" />
                                        <TextBlock Text="{Binding EnglishWithNewlines}" TextWrapping="Wrap" TextTrimming="WordEllipsis" Margin="12,-4,0,5" />
                                        <TextBlock Text="{Binding Chinese}" TextWrapping="Wrap" TextTrimming="WordEllipsis" Margin="12,-6,0,0" />
                                    </StackPanel>
                                    <StackPanel x:Name="ActionPanel" Margin="0,-5,0,0" Orientation="Horizontal" Visibility="Collapsed">
                                        <!--<c4f:RoundButton x:Name="PlayButton" ImageSource="/kuaishuo2;component/images/appbar.transport.play.rest.png" IsEnabled="{Binding ElementName=SearchPane, Path=DataContext.NetworkAvailable}" Tag="{Binding Index}" Margin="0,0,0,0" Click="PlayButton_Click"/>-->
                                        <!--<c4f:RoundButton x:Name="CopyButton" ImageSource="/kuaishuo2;component/images/CopyButton.png" Tag="{Binding Index}" Margin="0,0,0,0" Click="CopyButton_Click"/>-->
                                        <Button x:Name="PlayButton" Margin="0,0,0,0" Click="PlayButton_Click" Background="Transparent">
                                            <Button.Content>
                                                <SymbolIcon Symbol="Play" />
                                            </Button.Content>
                                        </Button>
                                        <Button x:Name="CopyButton" Margin="0,0,0,0" Background="Transparent" Click="CopyButton_Click">
                                            <Button.Content>
                                                <SymbolIcon Symbol="Copy" />
                                            </Button.Content>
                                        </Button>
                                        <Button x:Name="AddToListButton" Margin="0,0,0,0" Background="Transparent" Click="AddToListButton_Click" Tag="{Binding Index}">
                                            <Button.Content>
                                                <SymbolIcon Symbol="Add" />
                                            </Button.Content>
                                        </Button>
                                        <Button x:Name="SearchButton" Margin="0,0,0,0" Background="Transparent" Click="SearchButton_Click">
                                            <Button.Content>
                                                <SymbolIcon Symbol="Find" />
                                            </Button.Content>
                                        </Button>
                                        <Button x:Name="DecomposeButton" Margin="0,0,0,0" Background="Transparent" Click="DecomposeButton_Click">
                                            <Button.Content>
                                                <SymbolIcon Symbol="Cut" />
                                            </Button.Content>
                                        </Button>
                                        <!--<c4f:RoundButton x:Name="SearchButton" ImageSource="/kuaishuo2;component/images/appbar.feature.search.rest.png" Tag="{Binding Index}" Margin="0,0,0,0" Click="SearchButton_Click"/>-->
                                        <!--<c4f:RoundButton x:Name="DecomposeButton" ImageSource="/kuaishuo2;component/images/Scissors.png" Tag="{Binding Index}" Margin="0,0,0,0" Click="DecomposeButton_Click" IsEnabled="{Binding Chinese, Converter={StaticResource MinLengthChecker}}"/>-->
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </PivotItem>
            <PivotItem Header="Learn">
                <!-- Learn pivot content goes here-->
                <StackPanel>
                    <Grid Margin="0" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75" />
                            <RowDefinition Height="75" />
                            <RowDefinition Height="75" />
                            <RowDefinition Height="75" />
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Row="0" Text="Select what you want to do today:" />
                        <Button FontSize="20" HorizontalAlignment="Center" Width="150" Height="50" Grid.Row="1"
                        Content="Revision"
                        Click="{x:Bind ViewModel.GotoRevision}" />
                        <Button FontSize="20" HorizontalAlignment="Center" Width="150" Height="50" Grid.Row="2"
                        Content="New Material"
                        Click="{x:Bind ViewModel.GotoNewMaterial}" />
                    </Grid>
                    <TextBlock x:Name="stateTextBox" />

                </StackPanel>
            </PivotItem>
            <PivotItem x:Name="ListsPane" Header="Lists" Margin="12,8,12,0" >
                <StackPanel x:Name="ListsPaneContent" Orientation="Vertical">
                    <ListBox x:Name="ListListBox" VirtualizingStackPanel.VirtualizationMode="Standard" Margin="0,0,0,0"
                             ItemsSource="{Binding Items}"
                             SelectionChanged="ListListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Holding="ListItem_Holding"  RightTapped="ListItem_RightTapped"  Orientation="Horizontal" >
                                    <FlyoutBase.AttachedFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:Name="EditButton"
                                                        Text="Rename"
                                                        Click="RenameList_Click"/>
                                            <MenuFlyoutItem x:Name="DeleteButton"
                                                        Text="Delete"
                                                        Click="DeleteList_Click"/>
                                            <ToggleMenuFlyoutItem x:Name="SetAsDefault"
                                                        Text="Set as default"
                                                        Click="SetAsDefaultList_Click"
                                                        IsChecked="{Binding IsDefault}" />
                                        </MenuFlyout>
                                    </FlyoutBase.AttachedFlyout>
                                    <Border Width="76" Background="Transparent" Visibility="{Binding IsDefault, Converter={StaticResource InvertedVisibility}}">
                                        <StackPanel>
                                            <TextBlock
                                                Text="{Binding LineTwo}"
                                                Width="75"
                                                TextAlignment="Center"
                                                Visibility="{Binding ElementName=ListsPane, Path=DataContext.AddInProgress, Converter={StaticResource InvertedVisibility}}"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Width="76" Background="LightSalmon" Visibility="{Binding IsDefault, Converter={StaticResource VisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock
                                                Text="{Binding LineTwo}"
                                                Width="75"
                                                TextAlignment="Center"
                                                Visibility="{Binding ElementName=ListsPane, Path=DataContext.AddInProgress, Converter={StaticResource InvertedVisibility}}"/>
                                        </StackPanel>
                                    </Border>
                                    <StackPanel>
                                        <TextBlock
                                            Text="{Binding Name}"
                                            Visibility="{Binding IsEditable, Converter={StaticResource InvertedVisibility}}"
                                            Margin="12,0,0,0"
                                            HorizontalAlignment="Center"
                                            TextWrapping="NoWrap"
                                            TextTrimming="WordEllipsis"/>
                                        <TextBox
                                            Text="{Binding Name}"
                                            Visibility="{Binding IsEditable, Converter={StaticResource VisibilityConverter}}"
                                            Margin="0,0,0,0"
                                            InputScope="Search"
                                            Loaded="ListEdit_Loaded"
                                            GotFocus="ListEdit_GotFocus"
                                            LostFocus="ListEdit_LostFocus"
                                            KeyDown="ListEdit_KeyDown"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </RelativePanel>
</Page>

